package aqer;

public class Bank {
	private String account_holder;
	private int balance;
	Bank(String account_holder, int balance) {
		this.account_holder=account_holder;
		this.balance=balance;
	}
	String acc() {
		return account_holder;
	}
	double bal() {
		return balance;
	}
	void add(int amount) {
		if (amount >=0) {
			balance+=amount;
			System.out.println("Deposited Amount:" +amount);
	        System.out.println("Updated Balance:" +balance);
		}
		else {
		    System.out.println("unable to add amount");
		}
	}
	
	public static void main(String[] args) {
		Bank obj=new Bank("Priya", 1900);
		System.out.println("Account Holder:" +obj.acc());
		System.out.println("Balance:" +obj.bal());
		obj.add(4000);
	}

}

Output:-
Account Holder:Priya
Balance:1900.0
Deposited Amount:4000
Updated Balance:5900

